# =================================================================
# AI Voice Agent - Environment Configuration
# =================================================================
# Copy this file to .env and fill in your actual API keys
# Never commit the .env file to version control!

# =================================================================
# REQUIRED API KEYS
# =================================================================

# Murf AI - Text-to-Speech Service
# Get your key from: https://murf.ai/api/docs/authentication
MURF_API_KEY=your_murf_api_key_here

# AssemblyAI - Speech-to-Text Service  
# Get your key from: https://www.assemblyai.com/dashboard/signup
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Google Gemini - Large Language Model
# Get your key from: https://ai.google.dev/gemini-api/docs/quickstart
GEMINI_API_KEY=your_gemini_api_key_here

# =================================================================
# OPTIONAL CONFIGURATION
# =================================================================

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# File Upload Limits
MAX_AUDIO_SIZE=52428800  # 50MB in bytes

# Session Management
SESSION_TIMEOUT=3600  # 1 hour in seconds

# API Timeouts (in seconds)
STT_TIMEOUT=60        # Speech-to-text timeout
LLM_TIMEOUT=90        # Language model timeout  
TTS_TIMEOUT=120       # Text-to-speech timeout

# Response Limits
MAX_LLM_RESPONSE_CHARS=2500    # Max characters for TTS
MAX_CONVERSATION_HISTORY=20    # Max messages to keep in memory

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================

# Server Configuration (for production deployment)
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Origins (comma-separated for production)
CORS_ORIGINS=*

# =================================================================
# EXAMPLE VALUES (DO NOT USE IN PRODUCTION)
# =================================================================
